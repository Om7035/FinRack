# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/finrack
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=50

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin@localhost:5672/
CELERY_BROKER_URL=amqp://admin:admin@localhost:5672/
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=finrack-receipts
MINIO_SECURE=false

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Plaid Configuration (Get from https://plaid.com/)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox
PLAID_PRODUCTS=transactions,auth,balance,identity
PLAID_COUNTRY_CODES=US,CA,GB,FR,ES,NL,IE

# LLM Providers
# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.3

# Groq (Fast Inference) - Get from https://console.groq.com/
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.3-70b-versatile

# Anthropic Claude (Complex Reasoning) - Get from https://anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenRouter (Fallback) - Get from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key

# Email Configuration (SendGrid) - Get from https://sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@finrack.com
SENDGRID_FROM_NAME=FinRack

# SMS Configuration (Twilio) - Get from https://twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase Cloud Messaging)
FCM_SERVER_KEY=your_fcm_server_key

# External APIs
# Alpha Vantage (Market Data) - Get from https://www.alphavantage.co/
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# AWS Textract (Receipt OCR) - Optional
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Application Settings
APP_NAME=FinRack
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_NAME=FinRack
NEXT_PUBLIC_APP_VERSION=1.0.0

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_ga_id
